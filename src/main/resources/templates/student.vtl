<h2>Add Student Info:</h2>

<form action="/students" method='post'>
    <input id="student_id" name="student_id" type="hidden" value="$student.getId()"><br>

    <label for="name">Student Name</label>
      <input id="name" name="name" type="text" required=""><br>

    <label for="age">Student Age</label>
        <input id="age" name="age" type="number" required=""><br>

    <label for="phone">Student Phone</label>
        <input id="phone" name="phone" type="text" required=""><br>

    <label for="email">Student Email</label>
        <input id="email" name="email" type="text" required=""><br>

    <button type='submit' class="btn btn-success">Submit</button><br>
</form>

